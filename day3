sum  & product

#include <stdio.h>

int main()
{
    int n,i,product=1,sum=0;
    printf("enter the number:");
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
        sum+=a[i];
        product*=a[i];
    }
    printf("sum = %d",sum);
    printf("\nproduct = %d",product);
}

odd & even

#include <stdio.h>

int main()
{
    int n,i,so=0,se=0;
    printf("enter the number:");
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++){
        if((i+1)%2==0){
            se+=a[i];
        }
        else{
            so+=a[i];
        }
    }
    printf("sum of odd:%d",so);
    printf("\nsum of even:%d",se);
}

max & min

#include <stdio.h>

int main()
{
    int n,i,min,max;
    printf("enter the number:");
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    min=max=a[0];
    for(i=0;i<n;i++){
        if(a[i]<min){
            min=a[i];
        }
     else if(a[i]>max){
            max=a[i];
        }
    }
    printf("min : %d",min);
    printf("\nmax : %d",max);
}
